<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="./css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <h1 class="page-heading">
        <i class="fas fa-address-book"></i>  
        My contacts List
    </h1>
    <div class="list">
        <ul>
            <% for(let i of contact_list) { %>
                <li>
                    <div class="details">
                        <!-- for name -->
                        <p><%= i.name %></p>
                        <!-- for phone -->
                        <p><%= i.phone %></p>
                    </div>
                    <div>
                        <!-- using params -->
                        <!-- <a href="/delete-contact/<%= i.phone %> "> -->
                            <!-- query method -->
                            <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fas fa-times-circle"></i>
                        </a>
                    </div>
                </li>
            <% } %>  
        </ul>
    </div>

    <!-- method is post because it is changing the server side -->
    <form action="/create-contact" method="post">
        <!-- name is important because it acts like a key to send it to server -->
        <input type="text" name="name" placeholder="Enter Your Name" required> 
        <input type="number" name="phone" placeholder="Enter Your Phone" required>
        <button type="submit">Add</button>
    </form>

    <script type="text/javascript" src="./js/home.js"></script>
</body>
</html>